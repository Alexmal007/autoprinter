<UserControl x:Class="AutoPrinter.Popup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoPrinter"
             mc:Ignorable="d" 
             Background="White" MinHeight="60" MinWidth="130">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Settings"  Name="popupSettings" Background="{x:Null}" BorderBrush="{x:Null}" Click="PopupSettings_Click"/>
        <Button Grid.Row="1" Content="Exit" Name="popupExit" Background="{x:Null}" BorderBrush="{x:Null}" Click="PopupExit_Click"/>
    </Grid>
</UserControl>
